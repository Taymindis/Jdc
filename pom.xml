            <!--                    </descriptorRefs>-->
            <!--                    <finalName>${project.artifactId}-bundle-${project.version}</finalName>-->
            <!--                    <appendAssemblyId>false</appendAssemblyId>-->
            <!--                </configuration>-->
            <!--            </plugin>-->
        </plugins>
    </build>

</project>