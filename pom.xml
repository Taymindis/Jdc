    <groupId>com.github.taymindis</groupId>
    <artifactId>jdc</artifactId>
    <version>1.0.3</version>
    <name>jdc</name>
    <description>
        Java Dynamic Class
    </description>
    <properties>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
